{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>

    <a href="{{ path('post_index') }}" class="btn btn-secondary" role="button">Back to list</a>
    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-warning" role="button">edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
